<div>
    <%= form_for @post_form, url: posts_path do |form| %>
        Title: <%= form.text_field :title %><br />
        Body: <%= form.text_area :body, size: "40x10" %><br />
        Author: <%= form.text_field :author_name %><br />
        <%# Author: <input name="post[author_name]"/>  %>
        <%= form.submit %>
    <% end %>
    <div>
    <% if @post_form.errors.any? %>
        <% @post_form.errors.full_messages.each do |message| %>
        <h1><%= message %></h1>
        <% end %>
    <% end %>
    </div>

</div>
